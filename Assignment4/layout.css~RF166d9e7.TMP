header, nav, main, footer, aside {display: block; }

#wrapper {position:fixed; 
          background-color:aqua; 
          width:800px; 
          margin-left:10px; 
          margin-right:auto; 

          }

header {background-color:lightcoral;
         
        text-align:center;
        height:100px;}

nav {background-color:yellow; 
     width:100px; 
     float:left}

main {background-color:lightgreen; 
      margin-left:1px}

footer {background-color:lightgray; 
        width:30px; 
        clear:left;}


nav {width:150px;} 
nav ul {list-style-type:none}
nav a {text-decoration: none}
nav li {margin-left:-35px; 
        margin-bottom:6px}

nav a:hover {color:red; 
             font-weight:bold}
